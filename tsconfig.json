{
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "esm": true
  },
  "include": [
    "./config/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "webpack.config.ts",
    "config/jest/**/*.ts",
    "config/jest/**/*.tsx",
    "./**/eslint.config.mjs",
    "./**/global.d.ts"
  ]
}
